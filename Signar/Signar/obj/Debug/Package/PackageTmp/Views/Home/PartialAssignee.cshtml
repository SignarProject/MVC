@using AsignarBusinessLayer.AsignarDatabaseDTOs
@model UserDTO

@if (Model != null)
{
    string ava_url = @Model.AvatarPath;

    <img src=@ava_url class="profile-av" style="width: 40px; height: 40px;" />
                    <div class="user-name">
                        <p class="zero-merg; overflow: auto;">@Model.Name @Model.Surname</p>
                        <p class="zero-merg" style="font-size: 12px; overflow: auto;">@Model.Email</p>
                    </div>
}