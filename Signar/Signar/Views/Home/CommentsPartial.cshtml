                                <p class="zero-merg" style="font-size: 12px; overflow: auto;">@Model.Email</p>
                            </div>
                        </div>
                        @comment.Text
                        <div>
                            <label style="font-size: 11px;">@comment.CreationDate.ToString("dd/MM/yy h:mm tt")</label>
